{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "outDir": "./dist",
    "declaration": true,
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true, 
    "emitDecoratorMetadata": true,
    "composite": false,
    "types": ["node"],
  },
  "include": ["src/**/*"], 
  "exclude": ["node_modules", "dist", "../../services/**/*"] 
}