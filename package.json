{
  "name": "retrovault",
  "version": "1.0.0",
  "packageManager": "pnpm@9.0.0",
  "type": "module",
  "private": true,
  "description": "Retro tech e-commerce - Monorepo",
  "scripts": {
    "dev": "turbo dev",
    "test": "turbo run test --concurrency=1",
    "test:cov": "pnpm -r --workspace-concurrency=1 run test:cov",
    "db:push": "pnpm -r --workspace-concurrency=1 run db:push",
    "docker:up": "docker compose --env-file ./services/catalog/.env --env-file ./services/orders/.env --env-file ./services/payment/.env up -d",
    "docker:down": "docker compose down -v"
  },
  "devDependencies": {
    "@testcontainers/kafka": "^11.11.0",
    "@testcontainers/postgresql": "^11.11.0",
    "@types/node": "^25.0.9",
    "@vitest/coverage-v8": "^4.0.17",
    "eslint": "^9.39.2",
    "kafkajs": "^2.2.4",
    "prettier": "^3.7.4",
    "testcontainers": "^11.11.0",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "turbo": "^2.7.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17",
    "prisma": "6.19.2" 
  },
  "dependencies": {
    "@prisma/client": "6.19.2"
  },
  "pnpm": {
    "overrides": {
      "prisma": "6.19.2",
      "@prisma/client": "6.19.2"
    }
  }
}