{
  "name": "retrovault",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "description": "Retro tech e-commerce - Monorepo",
  "scripts": {
    "test": "pnpm -r exec vitest",
    "dev": "pnpm -r run dev",
    "docker:up": "docker compose --env-file ./services/catalog/.env --env-file ./services/orders/.env up -d",
    "docker:down": "docker compose down -v",
    "db:push": "pnpm --filter catalog exec prisma db push && pnpm --filter orders exec prisma db push && pnpm --filter catalog exec prisma generate && pnpm --filter orders exec prisma generate"
  },
  "devDependencies": {
    "@types/node": "^25.0.9",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "tsup": "^8.5.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.17"
  }
}