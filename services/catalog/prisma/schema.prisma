generator client {
  provider = "prisma-client-js"
  output   = "../src/infrastructure/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id    String @id @default(uuid())
  name  String @unique
  price Float
  stock Int
  year  Int
  brand       String
  description String?
  rating      Float    @default(0.0)
  createdAt   DateTime @default(now())
}