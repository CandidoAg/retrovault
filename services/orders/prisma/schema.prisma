generator client {
  provider = "prisma-client-js"
  output   = "../src/infrastructure/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CatalogProduct {
  id    String @id // Recibe el UUID que viene de Catalog
  name  String
  price Float
  stock Int
}

model Order {
  id         String   @id // Ya era String (UUID)
  customerId String
  total      Float
  createdAt  DateTime @default(now())
}