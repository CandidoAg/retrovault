generator client {
  provider = "prisma-client-js"
  output   = "../src/infrastructure/generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CatalogProduct {
  id    String @id // Recibe el UUID que viene de Catalog
  name  String @unique
  price Float
  stock Int
  brand String
  description String?
  rating Float
}

model OrderItem {
  id        String @id @default(uuid())
  orderId   String
  productId String
  name      String
  price     Float
  quantity  Int    @default(1)

  order     Order  @relation(fields: [orderId], references: [id])
}

model Order {
  id         String   @id // Ya era String (UUID)
  customerId String
  total      Float
  status     String   @default("PENDING")
  items      OrderItem[]
  createdAt  DateTime @default(now())
}