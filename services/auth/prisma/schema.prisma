datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String   // Aquí irá el hash de bcrypt
  name      String
  role      UserRole @default(USER)
  createdAt DateTime @default(now())
}